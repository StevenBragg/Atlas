{
  "name": "atlas-brain",
  "display_name": "Atlas Autonomous Learning System",
  "container": {
    "image": "YOUR_REGISTRY/atlas:salad-latest",
    "resources": {
      "cpu": 4,
      "memory": 16384,
      "gpu_classes": [
        "ed563892-aacd-40f5-80b7-90c9be6c759b",
        "a5db5c50-cbcb-4596-ae80-6a0c8090d80f",
        "9998fe42-04a5-4807-b3a5-849943f16c38"
      ]
    },
    "environment_variables": {
      "ATLAS_LOG_LEVEL": "INFO",
      "ATLAS_CHECKPOINT_DIR": "/data/checkpoints",
      "ATLAS_INPUT_DIR": "/data/input",
      "ATLAS_CHECKPOINT_INTERVAL": "500",
      "ATLAS_MAX_CHECKPOINTS": "3",
      "ATLAS_ENABLE_UNIFIED_INTELLIGENCE": "true",
      "ATLAS_ENABLE_EXPLORATION": "true",
      "ATLAS_LEARNING_RATE": "0.01",
      "ATLAS_MULTIMODAL_SIZE": "256",
      "ATLAS_HTTP_PORT": "8080",
      "ATLAS_MAX_VIDEO_FRAMES": "10000"
    },
    "logging": {
      "axiom": {
        "host": "YOUR_AXIOM_HOST",
        "dataset": "atlas-logs",
        "api_token": "YOUR_AXIOM_TOKEN"
      }
    }
  },
  "autostart_policy": true,
  "restart_policy": "always",
  "replicas": 3,
  "networking": {
    "protocol": "http",
    "port": 8080,
    "auth": false,
    "load_balancer": "round_robin"
  },
  "startup_probe": {
    "http": {
      "path": "/health",
      "port": 8080,
      "scheme": "http",
      "headers": []
    },
    "initial_delay_seconds": 60,
    "period_seconds": 10,
    "timeout_seconds": 5,
    "success_threshold": 1,
    "failure_threshold": 30
  },
  "liveness_probe": {
    "http": {
      "path": "/health",
      "port": 8080,
      "scheme": "http",
      "headers": []
    },
    "initial_delay_seconds": 0,
    "period_seconds": 30,
    "timeout_seconds": 10,
    "success_threshold": 1,
    "failure_threshold": 3
  },
  "readiness_probe": {
    "http": {
      "path": "/ready",
      "port": 8080,
      "scheme": "http",
      "headers": []
    },
    "initial_delay_seconds": 0,
    "period_seconds": 10,
    "timeout_seconds": 5,
    "success_threshold": 1,
    "failure_threshold": 3
  }
}
